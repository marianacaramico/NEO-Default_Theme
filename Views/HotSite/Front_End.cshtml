@{
    ViewBag.Title = "Certificação JET";
    Layout = "~/Views/Shared/Base/_Layout.cshtml";
}

<div class="ui container">
    <div class="ui grid">
        <div class="row three column stackable">
            <div class="column">
                <h2>Novo</h2>
                <form class="ui form" id="form-certification">
                    <div class="ui field">
                        <label>Nome</label>
                        <input class="ui input" type="text" name="nome" placeholder="Nome" required />
                    </div>
                    <div class="ui field">
                        <label>E-mail</label>
                        <input class="ui input" type="email" name="email" placeholder="E-mail" required />
                    </div>
                    <div class="ui field">
                        <label>Telefone</label>
                        <input class="ui input masked mask_phone" type="text" name="phone" placeholder="Telefone" required />
                    </div>
                    <div class="ui field">
                        <label>Assunto</label>
                        <input class="ui input" type="text" name="subject" placeholder="Assunto" required />
                    </div>
                    <div class="ui field">
                        <label>Mensagem</label>
                        <textarea class="ui textarea" name="message" placeholder="Mensagem" required ></textarea>
                    </div>
                    <button class="ui button primary" type="submit">Enviar</button>
                </form>
            </div>
            <div class="column">
                <h2>Preview</h2>
                <div class="ui form" id="fields-certification">
                    <div class="ui field">
                        <label>Nome</label>
                        <input class="ui input" readonly type="text" name="nome" />
                    </div>
                    <div class="ui field">
                        <label>E-mail</label>
                        <input class="ui input" readonly type="email" name="email" />
                    </div>
                    <div class="ui field">
                        <label>Telefone</label>
                        <input class="ui input" readonly type="text" name="phone" />
                    </div>
                    <div class="ui field">
                        <label>Assunto</label>
                        <input class="ui input" readonly type="text" name="subject" />
                    </div>
                    <div class="ui field">
                        <label>Mensagem</label>
                        <textarea class="ui textarea" readonly name="message"></textarea>
                    </div>
                </div>
            </div>
            <div class="column">
                <h2>sessionStorage</h2>
                <form class="ui form" id="storage-certification">
                    <div class="ui field">
                        <label>Nome</label>
                        <input class="ui input" type="text" name="nome" placeholder="Nome" required />
                    </div>
                    <div class="ui field">
                        <label>E-mail</label>
                        <input class="ui input" type="email" name="email" placeholder="E-mail" required />
                    </div>
                    <div class="ui field">
                        <label>Telefone</label>
                        <input class="ui input masked mask_phone" type="text" name="phone" placeholder="Telefone" required />
                    </div>
                    <div class="ui field">
                        <label>Assunto</label>
                        <input class="ui input" type="text" name="subject" placeholder="Assunto" required />
                    </div>
                    <div class="ui field">
                        <label>Mensagem</label>
                        <textarea class="ui textarea" name="message" placeholder="Mensagem" required ></textarea>
                    </div>
                    <button class="ui button primary" type="submit">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</div>